@model SFA.DAS.Employer.Profiles.Web.Models.ChangeSignInDetailsViewModel
@{
    ViewData["Title"] = "Change your sign-in details";
}

@section breadcrumb
{
    <div class="das-js-back-link"></div>
}

<div class="govuk-grid-row"  id="estimate-start-transfer">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">
            Change your sign-in details
        </h1>
        <p>You use your GOV.UK One Login to sign in to Manage apprenticeships.</p>
        <p>You can change these details for your GOV.UK One Login:</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>email address</li>
            <li>password</li>
            <li>how you get security codes to sign in</li>
        </ul>
        <p><a href="@Model.SettingsLink" class="govuk-link" target="_blank" rel="external">Change your sign-in details for your GOV.UK One Login (opens in new tab)</a></p>
    </div>
</div>
